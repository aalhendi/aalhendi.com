---
export interface Props {
  post: {
    url: string;
    frontmatter: {
      description: string;
      publishDate: string;
      title: string;
    };
  };
}

const { post } = Astro.props;
---

<div class="my-8 flex justify-between">
  <div>
    <a class="underline underline-offset-2 decoration-dashed" href={post.url}>
      <h1 class="font-semibold">{post.frontmatter.title}</h1>
    </a>
    <h2 class="font-light">{post.frontmatter.description}</h2>
    <a
      class="italic font-semibold text-sm text-zinc-600 dark:text-gray-300 underline underline-offset-2 decoration-dashed"
      href={post.url}>Read more</a
    >
  </div>
  <div class="font-extralight">
    {post.frontmatter.publishDate}
  </div>
</div>
