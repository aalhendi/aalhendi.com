---
import Nav from "./Nav.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="font-sans text-zinc-700 dark:text-gray-50 text-lg">
  <a href="/blog">
    <div class="flex justify-center my-10">
      <img
        class="h-28 rounded-md shadow-md shadow-zinc-500"
        src="/assets/blog.webp"
        alt="Tiny Rocket Blog"
      />
    </div>
    <h1 class="text-center text-3xl mt-6 mb-3 font-extrabold font-mono">
      {title}
    </h1>
  </a>
  <Nav />
</header>
